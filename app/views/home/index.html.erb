<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>Usuários Usuários</h5>
                </div>
                <div class="ibox-content">

                <table class="table table-striped table-bordered table-hover">
                <thead>
                <tr>
                    <th>Nome</th>
                    <th>Email</th>
                    <th>Status</th>
                    <th>Papel</th>
                    <th>Deletar</th>
                </tr>
                </thead>
                <tbody>
                    <% @users.each do |user| %>
                      <tr>
                        <td><%= user.name %></td>
                        <td><%= user.email %></td>
                        <td>Ativo</td>
                        <td><%= user.role %></td>
                        <td>Deletar</td>
                      </tr>
                    <% end %>
                </tbody>

                </table>

                </div>
            </div>
        </div>
    </div>
</div>