<p id="notice"><%= notice %></p>

<h1>Listing Identities</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Enrollment</th>
      <th>Lecture</th>
      <th>Expiration</th>
      <th>Campus</th>
      <th>User name</th>
      <th>User</th>
      <th>Last printed</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @identities.each do |identity| %>
      <tr>
        <td><%= identity.name %></td>
        <td><%= identity.enrollment_id %></td>
        <td><%= identity.lecture %></td>
        <td><%= identity.expiration %></td>
        <td><%= identity.campus %></td>
        <td><%= identity.user_name %></td>
        <td><%= identity.user_id %></td>
        <td><%= identity.last_printed %></td>
        <td><%= link_to 'Show', identity %></td>
        <td><%= link_to 'Edit', edit_identity_path(identity) %></td>
        <td><%= link_to 'Destroy', identity, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

