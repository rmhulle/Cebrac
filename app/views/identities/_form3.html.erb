<div class="col-md-10 col-md-offset-1">
        <div class="ibox">
            <div class="ibox-title">
                <h5>Formulário de Cadatro de Novos Alunos</h5>
            </div>
            <div class="ibox-content">
                <div id="form" class="wizard-big">
                    <h1>Fotografia</h1>
                    <fieldset>
                        <h2>Tire a Foto com a WebCam</h2>
                        
                        <div class="row">
                            <div class="webcam-clearfix" id="webcam"></div>
                            <div class="webcam-buttons">
                                <button type="button" class="btn btn-w-m btn-primary" value="Take picture" onclick="webcam.snap();">Tirar Foto</button>
                                <button type="button" class="btn btn-w-m btn-primary" value="Reset" onclick="webcam.reset();">Reiniciar</button>
                            </div>                                      
                        </div>
                    </fieldset>
                    <h1>Dados</h1>
                    <fieldset>
                        <h2>Informações dos Alunos</h2>
                        <div class="row">
                            <%= simple_form_for(@identity, :class => 'big-wizard', :html => {:multipart => true}) do |f| %>
                              <%= f.error_notification %>
                              <div class="form-inputs">
                                <%= f.input :name, label: 'Nome do Aluno', input_html: { maxlength: 26 }, placeholder: 'Ex. Daniel Carvalho' %>
                                <%= f.input :lecture, label: 'Curso', input_html: { maxlength: 26 }, placeholder: 'Ex. Administração' %>
                                <%= f.input :campus, label: 'Unidade', input_html: { maxlength: 11 }, placeholder: 'Ex. Vila Velha' %>
                                <%= f.input :enrollment_id, label: 'Matrícula', input_html: { maxlength: 12 }, placeholder: 'Ex. 0123456' %>
                                <%= f.input :expiration, label: 'Validade', placeholder: 'Ex. 20/12/2020' %>  
                                <%= f.input :document, label: 'Documento', input_html: { maxlength: 11 }, placeholder: 'Ex. 223443-6 ES' %>
                                </div>
                              <div class="form-actions">
                                <%= f.button :submit, 'Criar Identidade' %>
                              </div>
                            <% end %>
                        </div>
                    </fieldset>    
                    <h1>Revisar Identidade</h1>
