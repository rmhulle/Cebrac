
<div class="wrapper wrapper-content">
    <div class="row">
        <div class="col-lg-12">
            <div class="col-lg-6">
                <div class="ibox float-e-margins">
                        <div class="ibox-title">
                            <h5>Ajuste a foto</h5>
                        </div>
                        <div class="ibox-content">
                            <%= simple_form_for(@identity, :html => {:multipart => true}) do |f| %>
                                <%= f.error_notification %>
                                <div class="form-inputs">
                                    <%= f.cropbox :avatar, :width => 500, :height => 300 %>
                                </div>
                                <div class="form-actions">
                                  <%= f.button :submit %>
                                </div>
                                
   
                        </div>
                </div>
            </div>
                

            <div class="col-lg-6">
                <div class="ibox float-e-margins">
                    <div class="ibox-title">
                        <h5>Preview da Carteirinha</h5>
                    </div>
                    <div class="ibox-content">   
                        <div class="Carterinha" >
                              <div class="esquerda">
                                <%= f.crop_preview :avatar, html_options = { :class => "avatar"} %>
                              </div>
                              <div class="direita">
                                <div class="dados">
                                <div class="info">Rodrigo Missagia Hulle</div>
                                <div class="info">Vila Velha</div>
                                <div class="info">0256544</div>
                                <div class="info">213243-4</div>
                                </div>
                              </div>
                          </div>              
                    </div>
                </div>
            </div>
        </div>
        <% end %>
    </div>
</div>

                        