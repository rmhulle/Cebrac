<div class="middle-box text-center loginscreen  animated fadeInDown">
<h2>Cadastrar Novo Usuário</h2>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
  	<%= f.input :name, required: true, autofocus: true , label: "Nome"%>
    <%= f.input :email, required: true %>
    <%= f.input :password, label: "Senha", required: true, hint: (" Mínimo de #{@minimum_password_length} caracteres" if @validatable) %>
    <%= f.input :password_confirmation, required: true, label: "Confirme sua Senha" %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Registrar" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>