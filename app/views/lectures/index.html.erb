<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>Gerenciar Cursos</h5>
                </div>
                <div class="ibox-content">

                <table class="table table-striped table-bordered table-hover">
                  <thead>
                    <tr>
                      <th>Nome</th>
                      <th>Nome de Exibição</th>
                      <th colspan="3">Ações</th>
                    </tr>
                  </thead>

                  <tbody>
                    <% @lectures.each do |lecture| %>
                      <tr>
                        <td><%= lecture.name %></td>
                        <td><%= lecture.value %></td>
                        <td><%= link_to 'Show', lecture %></td>
                        <td><%= link_to 'Edit', edit_lecture_path(lecture) %></td>
                        <td><%= link_to 'Destroy', lecture, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                      </tr>
                    <% end %>
                  </tbody>
                </table>

                <br>

                <%= link_to 'Adicionar Novo Curso', new_lecture_path, :class => "btn btn-primary" %>
